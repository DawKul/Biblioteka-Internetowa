@model IEnumerable<BibliotekaInternetowa.Models.UserListViewModel>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">üë• ZarzƒÖdzanie u≈ºytkownikami</h1>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">‚Üê Powr√≥t do dashboardu</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <p class="mb-0">Brak u≈ºytkownik√≥w w systemie.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Nazwa u≈ºytkownika</th>
                                <th>Email</th>
                                <th>Imiƒô i nazwisko</th>
                                <th>Role</th>
                                <th>Wypo≈ºyczenia</th>
                                <th>Aktywne</th>
                                <th>Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td><strong>@user.UserName</strong></td>
                                    <td>@user.Email</td>
                                    <td>@(user.FullName ?? "-")</td>
                                    <td>
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-primary me-1">@role</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@user.BorrowingsCount</span>
                                    </td>
                                    <td>
                                        @if (user.ActiveBorrowingsCount > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@user.ActiveBorrowingsCount</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                                Szczeg√≥≈Çy
                                            </a>
                                            <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">
                                                Edytuj
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

